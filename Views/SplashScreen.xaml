<UserControl x:Class="CodeReactor.DarkFrontier.Views.SplashScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodeReactor.DarkFrontier.Views"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="290">
    <Grid Background="#1c1c1c">
        <Button BorderThickness="0" Background="#00000000" Click="CloseAndCancel" HorizontalAlignment="Right" VerticalAlignment="Top" Height="17" Margin="0,4,6,0" Width="15">
            <Image Source="pack://application:,,,/Images/X.png"></Image>
        </Button>
        <Button BorderThickness="0" Background="#00000000" Click="Minimize" HorizontalAlignment="Right" VerticalAlignment="Top" Height="17" Margin="0,4,21,0" Width="15">
            <Image Source="pack://application:,,,/Images/_.png"></Image>
        </Button>
        <Image x:Name="CodeReactorLogo" Height="130" Opacity="1" Source="pack://application:,,,/Images/CodeReactor.png"></Image>
    </Grid>
</UserControl>
